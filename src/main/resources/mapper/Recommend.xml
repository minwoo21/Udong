<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="Recommend">
	<!-- <select id="getComment" resultType="Map" parameterType="Map">
	    select * from Comment
		where POSTNUM=#{POSTNUM};
    </select> -->
    
	<!-- 추천을 누른 적 있는지 확인 -->
	<select id="isRecommend" resultType="Map" parameterType="Map">
	    select * from RECOMMEND where POSTNUM=#{POSTNUM} and ID = #{ID};
    </select>

	<insert id="insertRecommend" parameterType="Map">
        insert into RECOMMEND (ID, POSTNUM)
        values (#{ID},#{POSTNUM});
	</insert>

	<delete id="deleteRecommend" parameterType="Map">
		delete from RECOMMEND
		where ID=#{ID} and POSTNUM=#{POSTNUM};
	</delete>
</mapper>
